<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- The basic style for a button that will be shown in the RateMyApp dialogue -->
    <style name="rma_button">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/rma_button_text_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/view_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/view_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/view_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/view_vertical_margin</item>
        <item name="android:background">@color/rma_dialog_button_background</item>
        <item name="android:lineSpacingMultiplier">@dimen/rma_button_line_spacing</item>
    </style>

    <!-- The style for the title of the RateMyApp dialogue -->
    <style name="rma_title" parent="rma_button">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/rma_title_text_size</item>
        <item name="android:background">@color/rma_dialog_title_background</item>
        <item name="android:lineSpacingMultiplier">@dimen/rma_title_line_spacing</item>
    </style>

    <!-- The style for the separator that will be between the rate my app buttons -->
    <style name="rma_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/rma_divider_height</item>
        <item name="android:background">@color/feedback_divider</item>
    </style>


    <!-- This style is for the overall container of the RateMyApp feedback dialogue -->
    <style name="_rma_feedback_message_container">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/rma_feedback_dialog_padding_top</item>
        <item name="android:paddingLeft">@dimen/rma_feedback_dialog_padding_left</item>
        <item name="android:paddingRight">@dimen/rma_feedback_dialog_padding_right</item>
        <item name="android:paddingBottom">@dimen/rma_feedback_dialog_padding_bottom</item>
        <item name="android:background">@color/rma_feedback_dialog_background</item>
    </style>

    <style name="rma_feedback_message_container" parent="_rma_feedback_message_container" />

    <!-- Style the title of the dialogue. This will be the main title shown above the edittext -->
    <style name="_rma_feedback_message_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/rma_title_text_size</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/rma_feedback_message_margin_bottom</item>
    </style>

    <style name="rma_feedback_message_title" parent="_rma_feedback_message_title" />

    <!--
        Style the subtitle of the dialogue. This will be the subtitle shown above edittext and
        below the title (rma_feedback_message_title)
    -->
    <style name="_rma_feedback_message_subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/rma_subtitle_text_size</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="rma_feedback_message_subtitle" parent="_rma_feedback_message_subtitle" />

    <!--
        Style the container that will be the bottom section of the RateMyApp feedback dialogue.
        This section will contain the cancel and send buttons and the edittext that the users
        enter their feedback into.
    -->
    <style name="_rma_feedback_issue_container">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/rma_feedback_issue_container_padding</item>
        <item name="android:background">@color/feedback_container</item>
    </style>

    <style name="rma_feedback_issue_container" parent="_rma_feedback_issue_container" />

    <!--
        Style the edittext of the dialogue. This will be what the user enters their feedback
        into.
    -->
    <style name="_rma_feedback_issue_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/rma_edit_text_size</item>
        <item name="android:maxLines">5</item>
        <item name="android:layout_marginBottom">@dimen/rma_feedback_issue_edittext_bottom_padding</item>
    </style>

    <style name="rma_feedback_issue_edittext" parent="_rma_feedback_issue_edittext" />

    <!-- Style the container that will contain the send and cancel buttons -->
    <style name="_rma_feedback_issue_button_container">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">5</item>
    </style>

    <style name="rma_feedback_issue_button_container" parent="_rma_feedback_issue_button_container" />

    <!-- Style the cancel button on the feedback dialogue -->
    <style name="_rma_feedback_issue_cancel_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">@dimen/rma_button_text_size</item>
    </style>

    <style name="rma_feedback_issue_cancel_button" parent="_rma_feedback_issue_cancel_button" />

    <!-- Style the send feedback button on the feedback dialogue. -->
    <style name="_rma_feedback_issue_send_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textSize">@dimen/rma_button_text_size</item>
    </style>

    <style name="rma_feedback_issue_send_button" parent="_rma_feedback_issue_send_button" />

    <!--
        Style the divider that separates the top half of the dialogue which contains the title and
        subtitle from the bottom half which contains the buttons and the edittext.
    -->
    <style name="_rma_feedback_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/rma_divider_height</item>
        <item name="android:background">@color/feedback_divider</item>
    </style>

    <style name="rma_feedback_divider" parent="_rma_feedback_divider" />

</resources>